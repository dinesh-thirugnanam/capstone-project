              "mode": "raw",
              "raw": "{\n  \"name\": \"Main Office\",\n  \"description\": \"Company headquarters office location\",\n  \"centerLatitude\": 40.7128,\n  \"centerLongitude\": -74.0060,\n  \"radius\": 100,\n  \"isActive\": true,\n  \"officeInfo\": {\n    \"address\": \"123 Business Ave, New York, NY 10001\",\n    \"workingHours\": {\n      \"start\": \"09:00\",\n      \"end\": \"17:00\"\n    },\n    \"workingDays\": [\"Monday\", \"Tuesday\", \"Wednesday\", \"Thursday\", \"Friday\"]\n  }\n}"
